    <script>
        window.onload = async function(){
            loadCSS();
            $.get("/getIndex", function (json, status){

                var data = JSON.parse(json);
                var topHtml = drawCards(data["best_seller"], 0);
                var comingHtml = drawCards(data["coming_soon"], 0);
                console.log(topHtml);
                console.log(comingHtml);
                $("#card-row-best").append(topHtml);
                $("#card-row-soon").append(comingHtml + "<br>");
            });
        }
    </script>
